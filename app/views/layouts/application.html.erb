<!DOCTYPE html>
<html>
<head>
  <title>Whisper</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <div class="nav">
    <ul>
      <li><%= link_to "Index", root_path %></li>
      <li><%= link_to "Post", new_entry_path %></li>
      <li><%= link_to "Logout", logout_path %></li>
    </ul>
  </div>
<% end %>

<div class="container">
  <%= yield %>
</div>

<% unless @index %>
    <div class="footer">
      <p>&copy; Tomato 2012</p>
    </div>
<% end %>

</body>
</html>
